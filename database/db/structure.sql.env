            (_id !~ '^(?!.*(?:\/))([A-z\d._](?:(?:[A-z\d._]|(?:\.(?!\.))){2,28}(?:[A-z\d._]))?)$') THEN
          RAISE EXCEPTION 'social_profiles update failed' USING DETAIL = 'public_profile__invalid_format', HINT = json_build_object('platform', _platform);
