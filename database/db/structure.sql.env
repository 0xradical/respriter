    IF (_protocol IS NULL) OR (_host IS NULL) THEN
      RAISE EXCEPTION 'website update failed' USING DETAIL = 'website__invalid_uri', HINT = json_build_object('value', NEW.website);
    END IF;
  END IF;

  RETURN NEW;
END;
$$ SECURITY DEFINER STABLE LANGUAGE plpgsql;

