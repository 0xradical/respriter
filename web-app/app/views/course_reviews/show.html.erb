<% content_for :body_html_attributes do %>
  style="background-color:#FFFFFF"
<% end %>

<%= content_for :sprites do %>
  <%= sprites({icons: "*", brand: '*', i18n: '*', tags: RootTag.all.map(&:id)}) %>
<% end %>

<div class='container'>
  <div class='row'>
    <div class='offset-lg-3 col-12 col-lg-6'>
      <% if !@course_review.submitted? %>
        <%= form_tag(course_review_path(@course_review)) do %>
          <div class='mT40@<sm mT48 mB32@<sm mB20'>
            <%= t('.form.rating.title_html', provider: @course_review.provider.name, course: @course_review.course_name) %>
          </div>

          <div class='ta-l'>
            <div class='el:m-rating-input fs32'>
              <%= radio_button_tag 'course_review[rating]', 5, @rating == 5 %>
              <label for='course_review_rating_5'></label>

              <%= radio_button_tag 'course_review[rating]', 4, @rating == 4 %>
              <label for='course_review_rating_4'></label>

              <%= radio_button_tag 'course_review[rating]', 3, @rating == 3 %>
              <label for='course_review_rating_3'></label>

              <%= radio_button_tag 'course_review[rating]', 2, @rating == 2 %>
              <label for='course_review_rating_2'></label>

              <%= radio_button_tag 'course_review[rating]', 1, @rating == 1 %>
              <label for='course_review_rating_1'></label>
            </div>
          </div>

          <div class='mT40@<sm mT32'></div>

          <div class='el:m-form-field__label el:m-form-field__label--side'>
            <label for="completed">
              <%= t('.form.completion.title') %>
            </label>
          </div>

          <div class='mT8'>
            <span class='d-ib mR32'>
              <%= radio_button_tag 'course_review[completed]', false, @course_review.completed == false, { class: 'mR8@<sm mR4' } %><label class='va-m'><%= t('.form.completion.values.yep') %></label>
            </span>
            <span class='d-ib'>
              <%= radio_button_tag 'course_review[completed]', true, @course_review.completed == true, { class: 'mR8@<sm mR4' } %><label class='va-m'><%= t('.form.completion.values.nope') %></label>
            </span>
          </div>

          <div class='mT32'></div>

          <div class='el:m-form-field__label el:m-form-field__label--side'>
            <label for="feedback">
              <%= t('.form.feedback.title') %>
            </label>
          </div>

          <div class='el:m-form-field__textarea mT8'>
            <%= text_area_tag('course_review[feedback]', @course_review.feedback, { placeholder: t('.form.feedback.placeholder'), style: 'height: 9em; width: 100%', rows: 5 }) %>
          </div>

          <div class='ta-r d-n@<sm mT16 mB64'>
            <input type='submit' class='el:m-button el:m-button--primary-flat' value='<%= t('.form.send') %>'>
          </div>
          <div class='ta-r d-n@>lg mT24 mB40'>
            <input type='submit' class='el:m-button el:m-button--primary-flat el:m-button--block' value='<%= t('.form.send') %>'>
          </div>
        <% end %>
      <% else %>
        <div class='ta-c' style='margin-top: 10em; margin-bottom: 10em'>
          <div class='c-fg fw-b'>
            <span class='fs24@<sm fs32'>
              <%= t('.submission.header') %>
            </span>
          </div>
          <div class='c-fgM mT8'>
            <span class='fs16@<sm fs20'>
              <%= t('.submission.body') %>
            </span>
          </div>

          <a class='d-n@<sm mT32 el:m-button el:m-button--primary-flat' href='/' style='min-width:2.5em'>
            <%= t('.submission.link') %>
          </a>
          <a class='d-n@>lg mT24 el:m-button el:m-button--medium el:m-button--primary-flat el:m-button--block' href='/'>
            <%= t('.submission.link') %>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
