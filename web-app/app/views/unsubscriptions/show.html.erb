<div class="mL-a mR-a" style="max-width:1140px" >

  <div class="pT40 pB40">
    <div class="mB40 ta-c fw-b">
      <svg class="fi-fg" height="1.5rem"><use xlink:href="#brand-logo"></use></svg>
    </div>

    <div class="col-12 col-md-8 col-lg-6 mL-a mR-a">
      <div id="unsubscribe-intro" >
        <div class="mB8 ta-c fs16 fw-b"><%= t('.title', email: @email).html_safe %></div>
        <div class="ta-c fs14"><%= t('.subtitle').html_safe %></div>
      </div>
    </div>
  </div>

  <div class="col-12 col-md-8 col-lg-6 mL-a mR-a">
    <div class="bc-s pT40 pB40 pL48 pR48">
      <div id="unsubscribe-options" >
        <div class="mB20 fs16"><%= t('.option_request_intro').html_safe %></div>
          <%= form_with(url: "/unsubscriptions/#{@id}", method: "post") do %>
            <ul class="el:m-list mB20" style="width: 100%">
              <li>
                <div class="el:m-checkbox mB16">
                  <div class="el:m-checkbox__selector">
                    <%= radio_button_tag(:reason, "too_often") %>
                    <%= label_tag(:reason_too_often, "") %>
                  </div>
                  <span class="el:m-checkbox__label">
                    <%= t('.options.too_often').html_safe %>
                  </span>
                <div>
              </li>
              <li>
                <div class="el:m-checkbox mB16" >
                  <div class="el:m-checkbox__selector">
                    <%= radio_button_tag(:reason, "not_relevant") %>
                    <%= label_tag(:reason_not_relevant, "") %>
                  </div>
                  <span class="el:m-checkbox__label">
                    <%= t('.options.not_relevant').html_safe %>
                  </span>
                <div>
              </li>
              <li>
                <div class="el:m-checkbox mB16">
                <div class="el:m-checkbox__selector">
                    <%= radio_button_tag(:reason, "dislikes_email_marketing") %>
                    <%= label_tag(:reason_dislikes_email_marketing, "") %>
                  </div>
                  <span class="el:m-checkbox__label">
                    <%= t('.options.doesnt_like_mail_marketing').html_safe %>
                  </span>
                <div>
              </li>
              <li>
                <div class="el:m-checkbox mB16">
                  <div class="el:m-checkbox__selector">
                    <%= radio_button_tag(:reason, "other") %>
                    <%= label_tag(:reason_other, "") %>
                  </div>
                  <div class="el:m-form-field" style="width: 100%">
                    <div class="el:m-form-field__label el:m-form-field__label--over">
                      <label for="field" style="font-weight: normal"> <%= t('.options.other').html_safe %> <span><%= t('.options.up_to_200_characters').html_safe %></span></label>
                    </div>
                    <div id="other-reasons" class="el:m-form-field__textarea">
                      <%= text_area_tag(:details, "",
                          id:"other-reasons-text",
                          name:"details",
                          placeholder: t('.options.please_detail').html_safe,
                          maxlength:"200",
                          style:"width: 100%; height: 6rem") %>
                      <%= label_tag(:details, "") %>
                    </div>
                  </div>
                <div>
              </li>
            </ul>
            <div class="ta-c">
              <%= submit_tag( t('.submit').html_safe , class:"el:m-button el:m-button--primary-flat el:m-button--medium d-b@<sm w100@<sm") %>
            </div>
          <% end %>
        </div>
    </div>
  </div>

  <div class="mT40 mB40 d-f ai-c jc-c">
      <div class="a">
        <svg class="c1 mR4" style="transform:rotate(90deg); width:0.875rem;height:0.875rem">
          <use xlink:href='#icons-arrow-down' />
        </svg>
      </div>
      <div class="fs14">
        <a href="/"><%= t('.go_to_classpert').html_safe %></a>
      </div>
  </div>

</div>
