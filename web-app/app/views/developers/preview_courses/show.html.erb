<%= content_for :sprites do %>
  <%= sprites({
    tags: RootTag.all.map(&:id),
    brand: "*",
    "country-flags": "*",
    icons: [
      "facebook-circle",
      "linkedin-circle",
      "instagram-circle",
      "twitter-circle",
      "reddit-circle",
      "arrow-down",
      "audio",
      "subtitle",
      "certificate",
      "building",
      "id-badge",
      "velocimeter",
      "level",
      "clock",
      "close",
      "play",
      "video-recorder-unavailable",
      "question",
      "avatar"
    ],
    providers: @preview_course.provider.slug
  }) %>
<% end %>

<%= content_for :stylesheet_bundles do %>
  [ 'course-page' ]
<% end %>

<%= content_for :javascript_bundles do %>
  [ 'course-page' ]
<% end %>

<%= render_vue_component "CoursePage", {
  propsData: {
    locale: I18n.locale,
    course: @preview_course.as_indexed_json
  },
  locale: I18n.locale,
  state: {
    data: @preview_course.as_indexed_json,
    meta: {
      single: true
    }
  }
} %>
