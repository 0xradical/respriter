<div class='container el:amx-Mt(4em) el:amx-Mb(4em)'>
  <div class='row justify-content-center'>
    <div class='col-12 col-sm-8 col-md-6 col-lg-4'>
      <div class='el:amx-Ta(c) el:amx-Fw(b) el:amx-Fs(1.5em)'>
        <%= t('.title') %>
      </div>
      <div class='el:amx-Ta(c) el:amx-Mt(1em)'>
        <%= t('.subtitle') %>
      </div>

      <div class='el:amx-Mt(2em)'>
        <%= error_messages!(@profile) %>
      </div>

      <%= form_for(@profile, url: profile_path, method: :post) do |f| %>
        <div class='el:m-form-field el:amx-Mt(2em) <%= "el:m-form-field--error" if @profile.errors.details[:base]&.select{|error| error[:field] == :username }&.size > 0 %>'>
          <div class='el:m-form-field__input el:m-form-field__input--medium el:m-form-field__input--block'>
            <%= f.text_field :username, placeholder: t('.placeholder'), autofocus: true, autocomplete: "off", data: { :"form-ctrl-role" => 'input' }, class: 'c-form-ctrl__input'%>
          </div>
        </div>

        <%= f.submit t('.confirm'), class: 'btn btn--primary-flat btn--block el:amx-Mt(1.25em)' %>
      <% end %>
    </div>
  </div>
</div>