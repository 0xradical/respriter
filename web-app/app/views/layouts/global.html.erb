                  <%= link_to "https://instagram.com/classpert", target: '_blank' do %>
                    <%= svg_use('icons', 'instagram-circle', class: 'el:amx-Fi_fgV',  width: '1.5em', height: '1.5em') %>
                  <% end %>
                </li>
                <li>
                  <%= link_to "https://twitter.com/classpert", target: '_blank' do %>
                    <%= svg_use('icons', 'twitter-circle', class: 'el:amx-Fi_fgV',  width: '1.5em', height: '1.5em') %>
                  <% end %>
