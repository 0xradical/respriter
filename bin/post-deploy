#!/bin/bash
# This should only run for environments different then the production app

# Restore production DB onto the review app
if [ "$HEROKU_APP_NAME" != "classpert-web-app-prd" ]; then
  echo "Syncing DB with production ..."
  heroku pg:backups:restore `heroku pg:backups:url --app=classpert-web-app-prd` DATABASE_URL --app=$HEROKU_APP_NAME --confirm $HEROKU_APP_NAME
  bundle exec rake db:migrate
else
  echo "Skipping db_sync ..."
fi
