#!/usr/bin/env sh

HEROKU_WEB_APP_NAME='classpert-web-app'
HEROKU_POSTGREST_NAME='classpert-postgrest'
HEROKU_USER_DASH_NAME='clspt-user-dashboard'
HEROKU_DEV_DASH_NAME='clspt-developers-dashboard'
HEROKU_VIDEO_NAME='classpert-video-service'
HEROKU_NAPOLEON_POSTGREST_NAME='napoleon-postgrest'
HEROKU_PRD_APP='napoleon-the-crawler'
HEROKU_STG_APP='napoleon-stg'

case $1 in
napoleon-prd)
  echo $HEROKU_PRD_APP
  exit 0
  ;;
napoleon-stg)
  echo $HEROKU_STG_APP
  exit 0
  ;;
esac

service=`echo $1 | sed -E 's/-(prd|stg)//g'`
remote_env=`echo $1 | rev | cut -d- -f1 | rev`

case `echo $service | sed "s/[-_]/./g"` in
web.app)
  echo "$HEROKU_WEB_APP_NAME-$remote_env"
  exit 0
  ;;
base)
  echo "$HEROKU_WEB_APP_NAME-$remote_env"
  exit 0
  ;;
api)
  echo "$HEROKU_POSTGREST_NAME-$remote_env"
  exit 0
  ;;
user)
  echo "$HEROKU_USER_DASH_NAME-$remote_env"
  exit 0
  ;;
users)
  echo "$HEROKU_USER_DASH_NAME-$remote_env"
  exit 0
  ;;
developers)
  echo "$HEROKU_DEV_DASH_NAME-$remote_env"
  exit 0
  ;;
developer)
  echo "$HEROKU_DEV_DASH_NAME-$remote_env"
  exit 0
  ;;
indextool)
  echo "$HEROKU_DEV_DASH_NAME-$remote_env"
  exit 0
  ;;
index.tool)
  echo "$HEROKU_DEV_DASH_NAME-$remote_env"
  exit 0
  ;;
video)
  echo "$HEROKU_VIDEO_NAME-$remote_env"
  exit 0
  ;;
video.service)
  echo "$HEROKU_VIDEO_NAME-$remote_env"
  exit 0
  ;;
video.proxy)
  echo "$HEROKU_VIDEO_NAME-$remote_env"
  exit 0
  ;;
napoleon.api)
  echo "$HEROKU_NAPOLEON_POSTGREST_NAME-$remote_env"
  exit 0
  ;;
api.napoleon)
  echo "$HEROKU_POSTGREST_NAME-$remote_env"
  exit 0
  ;;
*)
  exit -1
  ;;
esac
