#!/usr/bin/env python

import json
import sys
import os

stream = os.popen('heroku config -j --app napoleon-the-crawler')
output = stream.read()
envs   = json.loads(output)

content = '''\
# Anonymizer Proxy
PROXY_HOST={proxy_host}
PROXY_USER={proxy_user}
PROXY_PASS={proxy_pass}

# Udemy Affiliate API
UDEMY_CLIENT_ID={udemy_client_id}
UDEMY_SECRET={udemy_secret}
\
'''.format(
  proxy_host      = envs['PROXY_HOST'],
  proxy_user      = envs['PROXY_USER'],
  proxy_pass      = envs.get('PROXY_PASS') or '',
  udemy_client_id = envs['UDEMY_CLIENT_ID'],
  udemy_secret    = envs['UDEMY_SECRET']
)

file = open(sys.argv[1], "w")
file.write(content)
file.close()
