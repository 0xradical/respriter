version: '3'
services:
  base: &base
    image: codextremist/rails:2.0.0
    volumes:
      - .:/app
    env_file:
      - .env

  app:
    <<: *base
    command: bundle exec rails s -b 0.0.0.0
    ports:
      - '3000:3000'
    depends_on:
      - sidekiq
      - webpacker
      - redis
      - mailcatcher
      - postgres
      - elasticsearch

  sidekiq:
    <<: *base
    command: bundle exec sidekiq

  webpacker:
    <<: *base
    command: bin/webpack-dev-server
    environment:
      - "WEBPACKER_DEV_SERVER_HOST=0.0.0.0"
      - "WEBPACKER_DEV_SERVER_PUBLIC=webpacker:3035"
    ports:
      - "3035:3035"

  cucumber:
    <<: *base
    entrypoint: bundle exec cucumber
    ports:
      - '3000:3000'
      - '9222:9222'
    env_file:
      - .env.test
    depends_on:
      - redis
      - mailcatcher
      - postgres
      - elasticsearch

  mailcatcher:
    image: schickling/mailcatcher
    ports:
      - "1025:1025"
      - "1080:1080"

  redis:
    image: redis
    ports:
      - "6379:6379"
    volumes:
      - redis:/data

  postgres:
    image: postgres:9.6
    ports:
      - "5432:5432"
    volumes:
      - postgres-9.6:/var/lib/postgresql/data

  elasticsearch:
    image: nshou/elasticsearch-kibana:latest
    environment:
      - "discovery.type=single-node"
    ports:
      - "9200:9200"
      - "9300:9300"
      - "5601:5601"
    volumes:
      - esdata:/usr/share/elasticsearch/data

volumes:
  redis:
  postgres-9.6:
  esdata:
