<% if params[:tag].present? %>
  <% content_for :meta do %>
    <title><%= t(".#{params[:tag]}.meta.title") %></title>
    <meta name='description' content='<%= t(".#{params[:tag]}.meta.description") %>' />
    <meta property='og:description' content='<%= t(".#{params[:tag]}.meta.description") %>' />
  <% end %>
<% end %>

<%= content_for :base_svg_sprites do %>
  <div data-svg-sprite="<%= elements_asset_path('svgs/lib/icons.svg') %>"></div>
  <div data-svg-sprite="<%= elements_asset_path('svgs/packs/providers.svg') %>"></div>
<% end %>

<script type='text/javascript'>
  window.env_context = {
    devise: {
      sign_in: "<%= new_user_account_session_path %>",
      sign_up: "<%= new_user_account_registration_path %>",
      signed_in: <%= current_user_account.present? %>
    }
  }
</script>

<%= content_for :javascript do %>
  <%= elements_javascript_include_tag 'vars' %>
  <%= javascript_packs_with_chunks_tag 'search-page' %>
  <%= stylesheet_pack_tag 'search-page' %>
<% end %>

<%= content_for :body_html_attributes do %>
  id='results' class='el:amx-Bc_gray1'
<% end %>

<%= render_vue_component "SearchPage", {
  propsData: {
    locale: I18n.locale
  },
  locale: I18n.locale,
  state: {
    data: @courses[:data],
    meta: @courses[:meta]
  }
} %>