 <script type='x-vue-template' id='social-share'>
   <social-sharing url="<%= request.url %>"
      title="<%= title %>"
      description="<%= description %>"
      quote="<%= quote %>"
      hashtags="<%= hashtags %>"
      twitter-user="classpert"
      inline-template>
    <ul class='c-list c-list--unstyled c-list--inline' style='line-height:1.5em;'>
      <li style='width:1.5em;height:1.5em'>
        <network network="linkedin">
          <svg width='1.5em' height='1.5em'>
            <use xlink:href='#icons-linkedin_share'></use>
          </svg>
        </network>
      </li>
      <li class='el:amx-Ml(0.875em)'>
        <network network="twitter">
          <svg width='1.5em' height='1.5em'>
            <use xlink:href='#icons-twitter_share'></use>
          </svg>
        </network>
      </li>
      <li class='el:amx-Ml(0.875em)'>
        <network network="facebook">
          <svg width='1.5em' height='1.5em'>
            <use xlink:href='#icons-facebook_share'></use>
          </svg>
        </network>
      </li>
      <li class='el:amx-Ml(0.875em)'>
        <network network="reddit">
          <svg width='1.5em' height='1.5em'>
            <use xlink:href='#icons-reddit_share'></use>
          </svg>
        </network>
      </li>
      <li style='clear:both;float:none !important'></li>
    </ul>
  </social-sharing>
</script>
