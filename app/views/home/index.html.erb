<%= content_for :meta do %>
  <title><%= t('.meta.title') %></title>
  <meta name='description' content="<%= t('.meta.description') %>" />
  <meta property='og:description' content="<%= t('.meta.description') %>" />
<% end %>

<%= content_for :stylesheets do %>
  <style type="text/css">
    .c-search-impact__input--hack {
      width: calc(100% - 77px) !important;
    }
  </style>
<% end %>

<script id='search-impact' type='x-vue-template'>
  <search-bar :css-classes='{container: "c-search-impact", form: "c-search-impact__form", input: "c-search-impact__input c-search-impact__input--hack"}'>
    <button slot='search-action' class='c-search-impact__btn'></button>
  </search-bar>
</script>

<div class='c-hero-impact mx-C(dark-gray)' style='border-bottom:1px solid #eee'>
  <div class='c-hero-impact__art'>
    <div class='c-hero-impact__slot'>
      <img src="<%= elements_asset_path('svgs/logo.svg') %>" class='mx-Wd(33%)@>small mx-Wd(60%)@extra-small'>
      <h1 style='font-weight:400;' class='mx-Mt-1d25 mx-Fs-1d5@>desktop mx-Fs-2@tablet mx-Fs-1d25@extra-small'>
        <%= t('.hero_html').html_safe %>
      </h1>
      <div class='mx-Mt-1d25 mx-Ml-0d875@phone mx-Mr-0d875@phone'>
        <div data-vue-cpt='search-impact'></div>
      </div>
    </div>
  </div>
</div>

<div class='mx-Pt-2@>medium mx-Pt-1@>extra-small' style='background-color:#FFF;padding-bottom:45px'>
  <div class='container'>
    <div class='row'>
      <% (RootTag.all).each_with_index do |t, index| %>
        <div class='col-12 col-md-3'>
          <%# Remove this hack as soon as all bundles are created %>
          <% bundles = %w(computer_science marketing data_science physical_science_and_engineering) %>
          <%= link_to (bundles.include?(t.id) ? course_bundles_path(t.slugify) : "#{t.slugify}") do %>
            <div class='mx-Bc(white) mx-Mt-2 mx-Mt-1@extra-small' style='height:50px;'>
              <span class='c-label c-label--double-line' style='height:60px;text-align:left'>
                <%= svg_use('icons', t.icon, { class: 'c-label__icon' }) %>
                <span class='c-label__text' class='mx-C(blue)' style='word-break:break-word;max-width:160px'>
                  <b><%= t("tags.#{t.id}") %></b>
                  <br />
                  <span style='color:black;font-size:0.625em'> <%= @count_by_category[t.id] %> online courses</span>
                </span>
              </span>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class='mx-Bc(light-gray)' style='padding-top:42px;padding-bottom:74px'>
  <div class='container'>
    <div class='row'>
      <div class='col-12 col-sm-5 col-md-5'>
        <%= image_pack_tag("media/svg/space-providers_art.svg", width: '100%' ) %>
      </div>
      <div class='col-12 col-sm-7 col-md-6 offset-md-1'>
        <h2 class='mx-Fs-2' style='margin-top:58px;line-height:1em'> <%= t('.about_title') %> </h2>
        <p style='line-height:1.5em'>
          <%= t(".about_text") %>
        </p>
      </div>
    </div>
  </div>
</div>
