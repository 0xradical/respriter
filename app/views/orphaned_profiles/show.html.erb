<div>
  <div class='el:amx-Bc_su el:amx-P(2.5em|0)'>
    <div class='container'>
      <div class='row'>
        <div class='col-12'>
          <div class='el:m-avatar el:m-avatar--circle el:m-avatar--6x6em'>
            <% if @orphaned_profile.avatar_url %>
              <%= image_tag @orphaned_profile.avatar_url %>
            <% else %>
              <img src="data:image/svg+xml;base64," />
            <% end %>
          </div><div class='el:amx-D(ib) el:amx-Va(m) el:amx-Ml(0.75em)'>
            <h1 style='font-weight:normal' class='el:amx-Fs(1.25em)'>
              <%= @orphaned_profile.name %>
              <span style='font-weight:bold' class='el:m-tag el:m-tag--primary-variant-flat el:m-tag--uppercase el:m-tag--xxs el:amx-Ml(0.5em)'>
                Instructor
              </span>
            </h1>
            <div class='el:amx-Fs(0.875em) el:amx-Mt(0.625em) el:amx-Mb(0.125em)'>
              <%= @orphaned_profile.short_bio %>
            </div>
            <div class='el:amx-Mt(0.75em)'>
              <ul class='el:m-list el:m-list--hrz'>
                <% @orphaned_profile.public_profiles.each do |key, val| %>
                  <li class='el:amx-Mr(0.5em)'>
                    <a href='<%= val %>' ref='nofollow noreferrer'>
                      <%= svg_use('icons', key, {class: "el:amx-Fi_#{key}", width: '1.25em', height: '1.25em'}) %>
                    </a>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class='container'>
    <div class='el:amx-Mt(2em)'>
      <div class='row'>
        <div class='col-12'>

          <h2 class='el:amx-Fs(1.25em)'>About Me</h3>
          <p style='line-height:1.5em'>
            <%= @orphaned_profile.long_bio %>
          </p>

          <h2 class='el:amx-Fs(1.25em) el:amx-Mt(1em)'>Courses</h3>
          <div class='row'>
            <% @courses.each do |course| %>
              <div class='col-12 col-md-3'>
                <%= render 'vcard', course: course %>
              </div>
            <% end %>
          </div>

        </div> 
      </div>
    </div>
  </div>
</div>
